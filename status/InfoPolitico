using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class InfoPolitico : MonoBehaviour {

    public Text nome, bio, tipo, level, cargo, autoridade, apoioMidia, retorica, confianca;
    public GameObject lula, ciro, bolso, dilma, suplicy, eneas, dodorio, haddard, cunha;

    public void InfoLula()
    {
     
        lula.gameObject.SetActive(true);

        ciro.gameObject.SetActive(false);
        bolso.gameObject.SetActive(false);
        dilma.gameObject.SetActive(false);
        suplicy.gameObject.SetActive(false);
        eneas.gameObject.SetActive(false);
        dodorio.gameObject.SetActive(false);
        haddard.gameObject.SetActive(false);
        cunha.gameObject.SetActive(false);




            nome.text = "Mr. Nine";
            bio.text = "Comandante do Exército da Mortadela, tem triplex e é palestrante profissional. ";
            level.text = PlayerPrefs.GetInt("LevelLula").ToString();
            tipo.text = "Conservador de Esquerda";
            cargo.text = PlayerPrefs.GetString("CargoLula");

            //STATUS

            autoridade.text = PlayerPrefs.GetFloat("AutoridadeLula").ToString();
            apoioMidia.text = PlayerPrefs.GetFloat("ApoioMidiaLula").ToString();
            retorica.text = PlayerPrefs.GetFloat("RetoricaLula").ToString();
            confianca.text = PlayerPrefs.GetInt("ConfiancaLula").ToString();

    }

