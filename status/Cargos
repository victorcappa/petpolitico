            if (PlayerPrefs.GetInt("LevelCiro") < 3)
            {
                PlayerPrefs.SetString("CargoCiro", "Candidato");
                cargo = PlayerPrefs.GetString("CargoCiro");
                PlayerPrefs.SetInt("MaxInflu", 70);
                Candidato.gameObject.SetActive(true);

