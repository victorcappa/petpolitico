            {
                PlayerPrefs.SetInt("MaxInflu", 180);

                if (PlayerPrefs.GetInt("CiroGovernador") == 1)
                {
                    PlayerPrefs.SetString("CargoCiro", "Governador");
                    cargo = PlayerPrefs.GetString("CargoCiro");
