        danoInimigo = Mathf.Round(Mathf.Round(Mathf.Round(((2 * levelInimigo / 5 + 2) * confiancaInimigo * autoridadeAtaque / confiancaInimigo) / 50) + 2) * mitouLacrou) * confianca;


        confiancaInimigo = (int)(confiancaInimigo + danoInimigo);
        if (confianca == 0)
        {
