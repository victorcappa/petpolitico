using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class StatusBatalha : MonoBehaviour
{

    public float autoridade, apoioMidia, retorica, confianca;

    public void Awake()
    {
        StatusBatalhaPersonagens();
    }

    public void Update()
    {
        StatusBatalhaPersonagens();

    }

    public void StatusBatalhaPersonagens()
    {
        AutoridadePersonagens();
        ApoioDaMidia();
        Retorica();
        Confianca();
    }

    public void AutoridadePersonagens()

    {
        if (PlayerPrefs.GetInt("LulaDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("AutoridadeLula", 40);
            autoridade = PlayerPrefs.GetFloat("AutoridadeLula");
        }

        if (PlayerPrefs.GetInt("CiroDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("AutoridadeCiro", 40);
            autoridade = PlayerPrefs.GetFloat("AutoridadeCiro");
        }

        if (PlayerPrefs.GetInt("BolsoDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("AutoridadeBolso", 40);
            autoridade = PlayerPrefs.GetFloat("AutoridadeBolso");
        }

        if (PlayerPrefs.GetInt("DilmaDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("AutoridadeDilma", 40);
            autoridade = PlayerPrefs.GetFloat("AutoridadeDilma");
        }

        if (PlayerPrefs.GetInt("SuplicyDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("AutoridadeSuplicy", 20);
            autoridade = PlayerPrefs.GetFloat("AutoridadeSuplicy");
        }

        if (PlayerPrefs.GetInt("EneasDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("AutoridadeEneas", 40);
            autoridade = PlayerPrefs.GetFloat("AutoridadeEneas");
        }

    } // FIM AUTORIDADEPERSONAGENS()

    public void ApoioDaMidia()

    {
        if (PlayerPrefs.GetInt("LulaDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("ApoioMidiaLula", 20);
            apoioMidia = PlayerPrefs.GetFloat("ApoioMidiaLula");
        }

        if (PlayerPrefs.GetInt("CiroDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("ApoioMidiaCiro", 20);
            apoioMidia = PlayerPrefs.GetFloat("ApoioMidiaCiro");
        }

        if (PlayerPrefs.GetInt("BolsoDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("ApoioMidiaBolso", 20);
            apoioMidia = PlayerPrefs.GetFloat("ApoioMidiaBolso");
        }

        if (PlayerPrefs.GetInt("DilmaDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("ApoioMidiaDilma", 20);
            apoioMidia = PlayerPrefs.GetFloat("ApoioMidiaDilma");
        }

        if (PlayerPrefs.GetInt("SuplicyDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("ApoioMidiaSuplicy", 40);
            apoioMidia = PlayerPrefs.GetFloat("ApoioMidiaSuplicy");
        }

        if (PlayerPrefs.GetInt("EneasDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("ApoioMidiaEneas", 20);
            apoioMidia = PlayerPrefs.GetFloat("ApoioMidiaEneas");
        }

    } // FIM ApoioDaMidia()

    public void Retorica()

    {
        if (PlayerPrefs.GetInt("LulaDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("RetoricaLula", 30);
            retorica = PlayerPrefs.GetFloat("RetoricaLula");
        }

        if (PlayerPrefs.GetInt("CiroDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("RetoricaCiro", 30);
            retorica = PlayerPrefs.GetFloat("RetoricaCiro");
        }

        if (PlayerPrefs.GetInt("BolsoDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("RetoricaBolso", 25);
            retorica = PlayerPrefs.GetFloat("RetoricaBolso");
        }

        if (PlayerPrefs.GetInt("DilmaDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("RetoricaDilma", 20);
            retorica = PlayerPrefs.GetFloat("RetoricaDilma");
        }

        if (PlayerPrefs.GetInt("SuplicyDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("RetoricaSuplicy", 30);
            retorica = PlayerPrefs.GetFloat("RetoricaSuplicy");
        }

        if (PlayerPrefs.GetInt("EneasDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("RetoricaEneas", 25);
            retorica = PlayerPrefs.GetFloat("RetoricaEneas");
        }

    } // FIM RETORICA

    public void Confianca()

    {
        if (PlayerPrefs.GetInt("LulaDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("ConfiancaLula", 10);
            confianca = PlayerPrefs.GetFloat("ConfiancaLula");
        }

        if (PlayerPrefs.GetInt("CiroDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("ConfiancaCiro", 10);
            confianca = PlayerPrefs.GetFloat("ConfiancaCiro");
        }

        if (PlayerPrefs.GetInt("BolsoDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("ConfiancaBolso", 15);
            confianca = PlayerPrefs.GetFloat("ConfiancaBolso");
        }

        if (PlayerPrefs.GetInt("DilmaDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("ConfiancaDilma", 10);
            confianca = PlayerPrefs.GetFloat("ConfiancaDilma");
        }

        if (PlayerPrefs.GetInt("SuplicyDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("ConfiancaSuplicy", 10);
            confianca = PlayerPrefs.GetFloat("ConfiancaSuplicy");
        }

        if (PlayerPrefs.GetInt("EneasDentroScene") == 1)
        {
            PlayerPrefs.SetFloat("ConfiancaEneas", 15);
            confianca = PlayerPrefs.GetFloat("ConfiancaEneas");
        }


    } // FIM CONFIANCA

} // FIM CLASSE 
