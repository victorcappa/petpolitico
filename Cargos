            if (PlayerPrefs.GetInt("LevelCiro") >= 30 && PlayerPrefs.GetInt("PassouCargoCiro") == 1)
            {
                PlayerPrefs.SetString("CargoCiro", "Presidente");
                cargo = PlayerPrefs.GetString("CargoCiro");
                PlayerPrefs.SetInt("MaxInflu", 200);


