            if (PlayerPrefs.GetInt("LevelBolso") == 6)
            {
                PlayerPrefs.SetInt("MaxInflu", 120);

                if (PlayerPrefs.GetInt("BolsoDeputado") == 1)
                {
                    PlayerPrefs.SetString("CargoBolso", "Deputado");
                    cargo = PlayerPrefs.GetString("CargoBolso");
