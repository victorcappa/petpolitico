                {
                    PlayerPrefs.SetString("CargoBolso", "Vereador");
                    cargo = PlayerPrefs.GetString("CargoBolso");
                    PlayerPrefs.SetInt("PassouCargoBolso", 1); // para verificar se ele já passou para esse cargo
